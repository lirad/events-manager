

<h1 class="uk-heading-line"><span><%= @user.name %></span></h1>

<h1 class="uk-heading-line"><span>Events Attending</span></h1>

  <ul class="uk-list uk-list-striped">
     <% @events.each do |a| %>
      <li> 
      <%= a.event.name %> 
           <%if a.event.date < Time.now.beginning_of_day %>
         <span class="uk-text-danger"> Past on</span>
         <%= format_date a.event.date %>
        <%else%>
         <span class="uk-text-primary">Future on </span>
         <%= format_date a.event.date %>
        <% end %>
      </li>
    <% end %>
</ul>
  

